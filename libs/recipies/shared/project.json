{
  "projectType": "library",
  "sourceRoot": "libs/recipies/shared/src",
  "prefix": "cook-it",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/recipies/shared"],
      "options": {
        "jestConfig": "libs/recipies/shared/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/recipies/shared/**/*.ts",
          "libs/recipies/shared/**/*.html"
        ]
      }
    }
  },
  "tags": ["scope:recipes", "type:utils"]
}
