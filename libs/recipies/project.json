{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/recipies/src",
  "prefix": "cook-it",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/recipies"],
      "options": {
        "jestConfig": "libs/recipies/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/recipies/**/*.ts", "libs/recipies/**/*.html"]
      }
    }
  },
  "tags": ["type: data-access, scope: recipes"]
}
