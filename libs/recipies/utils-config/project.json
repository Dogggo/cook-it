  "projectType": "library",
  "sourceRoot": "libs/recipies/utils-config/src",
  "prefix": "cook-it",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/recipies/utils-config/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
