    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/recipies/utils-config/**/*.ts",
          "libs/recipies/utils-config/**/*.html"
        ]
      }
